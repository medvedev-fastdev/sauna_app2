		<meta name='yandex-verification' content='6ca27b58987c713c' />

		<title><%= t :title %></title>
		
		<%= csrf_meta_tag %>	
		<%= render 'layouts/javascripts' %>			
		<%= render 'layouts/stylesheets' %>		
	</head>
	<body>

	<!-- Script for like. Start. -->
		<div id="fb-root"></div>
		<script>
			(function(d, s, id) {

			  var js, fjs = d.getElementsByTagName(s)[0];

			  if (d.getElementById(id)) return;

