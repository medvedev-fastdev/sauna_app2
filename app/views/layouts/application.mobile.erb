<!DOCTYPE html> 
<html> 
	<head> 
		<title><%= t :title %></title> 
		<meta name="viewport" content="width=device-width, initial-scale=1"> 				
		<%= javascript_include_tag :defaults %>
		<%= stylesheet_link_tag 'mobile',  :media => 'screen' %>
		<%= csrf_meta_tag %>
	</head> 
<body> 
	<table class="header">
		<tr>
			<td align="left">
				<%= link_to t(:home), "/" %>			
			</td>	
			<td align="right">
				<%= link_to t(:full_version), "/?mobile=0" %>
			</td>
		</tr>
	</table>
	
	<%= yield %>
</body>
</html>