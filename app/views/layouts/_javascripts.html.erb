  	<script type="text/javascript">
			$(function(){				
				// Dialog			
				$('#dialog').dialog({
					autoOpen: false,
					width: 400,
					buttons: {
						"Ok": function() { 
							$('#signin').submit();
							$(this).dialog("close"); 
						}, 
						"Cancel": function() { 
							$(this).dialog("close"); 
						} 
					}
				});

				// Dialog Link
				$('#dialog_link').click(function(){
					$('#dialog').dialog('open');
					return false;
				});	
				
				// Tabs
				$('#tabs').tabs();
				
			});
    </script>	
	
