<div class="sauna-detail-description-tab-content _saunaDetailDescription _saunaDetailDescriptionClosed">				
	<h2><%= sauna_item.name %></h2>
	<p>
		<%= sauna_item.description %>
	</p>					
	<div class="round-sub-sub-box sauna-inventory">
		<ul>
			<li>				
				<div class="<%= sauna_item.has_kitchen? ? 'checked' : '' %>"><%= t :has_kitchen %></div>
				<div class="<%= sauna_item.has_bar? ? 'checked' : '' %>"><%= t :has_bar %></div>			
				
				<div class="<%= sauna_item.has_mangal? ? 'checked' : '' %>"><%= t :has_mangal %></div>
				
			</li>
			<li>
				<div class="<%= sauna_item.has_restroom? ? 'checked' : '' %>"><%= t :has_restroom %></div>
				<div class="<%= sauna_item.has_audio? ? 'checked' : '' %>"><%= t :has_audio %></div>
				<div class="<%= sauna_item.has_video? ? 'checked' : '' %>"><%= t :has_video %></div>				
			</li>
			<li>
				<div class="<%= sauna_item.has_billiards? ? 'checked' : '' %>"><%= t :has_billiards %></div>
				<div class="<%= sauna_item.has_pool? ? 'checked' : '' %>"><%= t :has_pool %></div>
				<div class="<%= sauna_item.has_veniki? ? 'checked' : '' %>"><%= t :has_veniki %></div>
			</li>
		</ul>
		<div class="clearing"></div>
	</div>

	<dl class="properties">
		<dt><%= t :sauna_type %>: </dt><dd><%= sauna_item.sauna_type.name %></dd>
		<dt><%= t :min_price %>: </dt><dd><%= sauna_item.min_price %> <%= t :v_rub %></dd>
		<dt><%= t :capacity %>: </dt><dd><%= sauna_item.capacity %> <%= t :v_chel %></dd>
	</dl>
	<div class="clearing"></div>
</div>
