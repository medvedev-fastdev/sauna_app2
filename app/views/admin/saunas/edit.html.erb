<div class="detail-page">
	
	<% if current_user.super_admin? %>
		<%= render 'shared/navigation', :left_link => admin_user_path(@sauna.user.id), :left_label => t(:saunas_list), :right_label => @sauna.name %>		
	<% else %>
		<%= render 'shared/navigation', :left_link => admin_saunas_path, :left_label => t(:saunas_list), :right_label => @sauna.name %>		
	<% end %>

	<div class="round-box">
		<div class="round-sub-box">		
			<h2><%= t :edit_sauna %></h2>
				<div class="_expanded">
					<%= form_for @sauna, :url => admin_sauna_path(@sauna), :html => { :multipart => true, :class => "comment-form" } do |f| %>					
						<%= render 'form', :f => f %>
					<% end %>
				</div>
				<div class="_closed"></div>
				<div class="clearing"></div>				
		</div>
	</div>
	
	<% unless @sauna.sauna_photos.empty? %>
		<%= render 'gallery' %>		
	<% end %>	


	<%= render 'sauna_items' %>	

	
	<% unless @sauna.sauna_comments.empty? %>
		<%= render 'comments' %>	
	<% end %>	
	
</div>
<!-- We only want the thunbnails to display when javascript is disabled -->
<script type="text/javascript">
	document.write('<style>.noscript { display: none; }</style>');
</script>
<script type="text/javascript">
	Frame.initDetailPage();
</script>