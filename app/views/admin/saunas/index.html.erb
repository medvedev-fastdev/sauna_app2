<div class="main-page">
	<% if current_user.super_admin? %>   
		<%= render 'shared/navigation', :left_link => admin_users_path, :left_label => t(:users_list), :right_label => @user.name %>		
	<% end %>
	
	<div>		
		<h1><%= t :saunas_list %></h1>
		<% unless @saunas.empty? %>
			<ul class="result-list">	
				<li class="head">
					<div class="name"><%= t :sauna %></div>
					<div><%= t :actions %></div>
				</li>
				<%  @saunas.each do |sauna| %>				
					<%= render sauna %>
				<% end %>		
			</ul>
		<% end %>	
	</div>
	
</div>

