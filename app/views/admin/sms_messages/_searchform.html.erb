<%= search_form_for @q, :url => admin_sms_messages_path, :remote => true, :html => {:method => :get, :class => "round-box filter-box"} do |f| %>
	<ul>
		<li class="expanded _expandedBox filter-section">
			<h2><%= t :main_parameters %></h2>
			<div class="main-params _expanded">
				<dl>
					<dt class="township"><%= t :owner %>:</dt>
					<dd class="township">
						<%= select("q", "booking_sauna_item_sauna_user_id_eq", options_for_select(@owners_for_dropdown), { :include_blank => false }) %>						
					</dd>
					<dt class="township"><%= t :sauna %>:</dt>
					<dd class="township">
						<%= select("q", "booking_sauna_item_sauna_id_eq", options_for_select(@saunas_for_dropdown), { :include_blank => false }) %>												
					</dd>
				</dl>
			</div>
			<div class="_closed"></div>
			<div class="clearing"></div>
		</li>								
		<%= f.submit " ", :class => "search-button" %>							
	</ul>
	<div class="clearing"></div>					
<% end %>

					
