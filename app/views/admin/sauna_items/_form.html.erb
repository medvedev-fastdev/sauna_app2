	<dd>
		<%= f.text_field :min_price %>
	</dd>		
	<dt><label for="sauna_item_min_duration"><%= t :min_duration %>:</dt>
	
	<dd>
		<%= f.text_field :min_duration %>
	</dd>	
	<dt><label for="sauna_item_min_duration"><%= t :has_kitchen %>:</dt>
	<dd>
		<%= f.check_box :has_kitchen %>
	</dd>	
	<dt><label for="sauna_item_min_duration"><%= t :has_restroom %>:</dt>
	<dd>
		<%= f.check_box :has_restroom %>
	</dd>	
	<dt><label for="sauna_item_min_duration"><%= t :has_billiards %>:</dt>
	<dd>
		<%= f.check_box :has_billiards %>
	</dd>	
	
	<dt><label for="sauna_item_min_duration"><%= t :has_audio %>:</dt>
	<dd>
		<%= f.check_box :has_audio %>
	</dd>	
	<dt><label for="sauna_item_min_duration"><%= t :has_video %>:</dt>
	<dd>
		<%= f.check_box :has_video %>
	</dd>	
	<dt><label for="sauna_item_min_duration"><%= t :has_bar %>:</dt>
	<dd>
		<%= f.check_box :has_bar %>
	</dd>	
	
	<dt><label for="sauna_item_min_duration"><%= t :has_pool %>:</dt>
	<dd>
		<%= f.check_box :has_pool %>
	</dd>	
	<dt><label for="sauna_item_min_duration"><%= t :has_mangal %>:</dt>
	<dd>
		<%= f.check_box :has_mangal %>
	</dd>	
	<dt><label for="sauna_item_min_duration"><%= t :has_veniki %>:</dt>
	<dd>
		<%= f.check_box :has_veniki %>
	</dd>	
	
