<%= render 'shared/error_messages', :object => f.object %>
<%= f.hidden_field :sauna_id,  :value => @sauna.id %>

<dl>
	<dt><label for="sauna_item_name"><%= t :name %>:</dt>
	<dd>
		<%= f.text_field :name %>
	</dd>
	<dt><label for="sauna_item_description"><%= t :description %>:</dt>
	<dd>
		<%= f.text_area :description, :size => "60x6" %>
	</dd>	
	<dt><label for="sauna_item_description"><%= t :sauna_type %>:</dt>
	<dd>
		<%= f.collection_select :sauna_type_id, SaunaType.all, :id, :name, :include_blank => false %>
	</dd>		
	<dt><label for="sauna_item_capacity"><%= t :capacity %>:</dt>
	<dd>
		<%= f.text_field :capacity %>
	</dd>		
