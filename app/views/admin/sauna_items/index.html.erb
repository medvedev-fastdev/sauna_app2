<div class="main-page">
	<div class="add-button-container">				
		<%= link_to t(:add_sauna_item), new_admin_sauna_item_path(:id => @sauna.id), :class => "add-green-button" %>   
	</div>
	<div class="admin-content">		
		<ul class="result-list">	
			<li class="head">
				<div class="name"><%= t :sauna %></div>
				<div class="actions-label"><%= t :actions %></div>
			</li>	
			<% if !@sauna_items.empty? %>
				<%  @sauna_items.each do |sauna_items| %>				
					<%= render sauna_items %>
				<% end %>
			<% else %>
				<%= render 'shared/empty_row' %>
			<% end %>	
		</ul>		
	</div>
</div>

